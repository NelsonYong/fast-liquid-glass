{
  "name": "fast-liquid-glass",
  "version": "1.0.0",
  "description": "高级液态玻璃渲染器，基于PIXI.js实现",
  "main": "dist/core.js",
  "type": "module",
  "scripts": {
    "dev:liquid": "tsc --watch",
    "build:liquid": "tsc",
    "build": "pnpm build:liquid && vite build",
    "dev": "vite dev",
    "serve": "python3 -m http.server 8080",
    "start": "npm run build && npm run serve",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "liquid",
    "glass",
    "webgl",
    "pixijs",
    "renderer",
    "fluid",
    "simulation"
  ],
  "author": "液态玻璃渲染器",
  "license": "MIT",
  "packageManager": "pnpm@10.12.1",
  "dependencies": {
    "@types/node": "24.0.1",
    "typescript": "5.8.3"
  },
  "devDependencies": {
    "vite": "^6.3.5"
  },
  "files": [
    "dist/**/*",
    "src/**/*",
    "example/**/*"
  ]
}
